@model Backend_Project_Amado.Areas.Admin.Models.ProductIndexVM

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-2">
            <div class="bg-secondary rounded d-flex align-items-center p-4 justify-content-center">
                <div class="d-flex justify-content-center align-items-center">
                    <a asp-controller="Product" asp-action="Add" style="color:white" class="btn btn-danger">Add Product</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Product Secton Start -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Products</h6>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col" class="col-xl-6">Description</th>
                        <th scope="col">In Stock</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>$@product.Price.ToString(".##")</td>
                            <td>@product.Description</td>
                            <td>@product.InStock</td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@product.Id">Details</a>
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                                <a class="btn btn-sm btn-primary" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Product Section End -->