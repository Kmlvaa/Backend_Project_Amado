@model Backend_Project_Amado.Models.PagesCartVM

@{
    var subtotal = Model.Items.Sum(item => item.Item2.Price * item.Item1.Count).ToString(".##");
}
@{
    ViewData["Count"] = Model.Count;
}

<div class="cart-table-area section-padding-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="cart-title mt-50">
                    <h2>Shopping Cart</h2>
                </div>

                <div class="cart-table clearfix">
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var (basketItem, product) in Model.Items)
                            {
                                <tr>
                                    <td class="cart_product_img">
                                        <a href="#"><img style="width:120px" src="~/img/product-img/@product.Images?.FirstOrDefault()?.Image?.Url" alt="ILoveU.png"></a>
                                    </td>

                                    <td class="cart_product_desc">
                                        <h5>@product.Name</h5>
                                    </td>
                                    <td class="price">
                                        <span>$@(product.Price.ToString(".##"))/span>
                                    </td>
                                    <td class="qty">
                                        <div class="qty-btn d-flex">
                                            <p>
                                                Count: @basketItem.Count
                                                <a asp-controller="Pages" asp-action="DeleteFromBasket" asp-route-id="@basketItem.ProductId" style="color:red;padding:10px">Delete</a>

                                            </p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="cart-summary">
                    <h5>Cart Total</h5>
                    <ul class="summary-table">
                        <li><span>subtotal:</span> <span>$@subtotal</span></li>
                        <li><span>delivery:</span> <span>Free</span></li>
                        <li><span>total:</span> <span>$@subtotal</span></li>
                    </ul>
                    <div class="cart-btn mt-100">
                        <a asp-action="Index" asp-controller="Checkout" class="btn amado-btn w-100">Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 