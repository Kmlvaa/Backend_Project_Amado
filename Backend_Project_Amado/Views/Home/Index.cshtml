@model Backend_Project_Amado.Models.HomeIndexVM

    <!-- Product Catagories Area Start -->
    <div class="products-catagories-area clearfix">
        <div class="amado-pro-catagory clearfix">

            <!-- Single Catagory -->
        @foreach(var product in Model.Products)
        {
        <div class="single-products-catagory clearfix">
            <a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@product.Id">
                <img src="~/img/product-img/@product.Images?.FirstOrDefault()?.Image.Url" alt="">
                <!-- Hover Content -->
                <div class="hover-content">
                    <div class="line"></div>
                    <p>From $@product.Price.ToString(".##")</p>
                    <h4>@product.Name</h4>
                </div>
            </a>
        </div>
        }
    </div>
    </div>
    <!-- Product Catagories Area End -->
